@using RSApp.Core.Services.ViewModels;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor _httpContext;
@model IEnumerable<PropTypeVm>




<div class="row">
  @if (Model.Count() != 0)
  {
    <table class="table table-dark table-striped table-hover text-start">
      <thead>
        <tr>
          <th>
            Name
          </th>
          <th>
            Description
          </th>
          <th>
            Actions
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
              <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id"><i
              class="bi bi-pencil-square"></i></a>
            </td>
            <td>
              <a asp-action="Delete" asp-controller="Type" asp-route-id="@item.Id" onclick="return  confirm('Are you sure you want to delete this type: @item.Name?')" class="btn btn-outline-danger mb-3"><i
              class="bi bi-trash-fill"></i></a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <div class="alert alert-warning" role="alert">
      No Types Created
    </div>
  }
</div>
